@model IEnumerable<ControleStarter.Models.Starter>

@{
    Layout = "_LayoutMenuLateral";
}

<div class="d-flex justify-content-center">
    <div class="card" style="width: auto;">
        <div class="card-body">
            <img src="/images/Starters.png" alt="logo-Starters" width="200" border="0">
            <hr>
            <a asp-action="NovoStarter" aps-controller="Starter" class="btn btn-dark">Inserir novo(a) Stater</a><br><br>

            <script>
                $(document).ready( function () {
                    $('#starters').DataTable({
                        "info": false,
                        "search": false,
                        "language": {
                            "lenghtMenu" : "Mostrando _MENU_ registros",
                            "zeroRecords": "Desculpe, nada foi encontrado",
                            "info": "Mostando página _PAGE_ de _PAGES_",
                            "infoEmpty": "Nenhum registro disponível",
                            "paginate": {
                                "first":    "Primeiro",
                                "last":     "Último",
                                "next":     "Próximo",
                                "previous": "Anterior"
                            }
                        }
                    });
            } );
            </script>

            <table id="starters" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>4 Letras</th>
                        <th>Tecnologia</th>
                        <th>Turma</th>
                        <th>Módulo</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var starter in Model)
                    {
                        <tr>
                            <td>@starter.Nome</td>
                            <td>@starter.QuatroLetras</td>
                            <td>@starter.Tecnologia.Nome</td>
                            <td>@starter.ProgramaStart.Nome</td>
                            <td>@starter.Modulo.Nome</td>
                            <td>
                                <a class="btn btn-primary btn-sm" href="Starter/EditarStarter/@starter.Id">Editar</a> 
                                <a class="btn btn-primary btn-sm" href="/Starter/Apagar/@starter.Id" role="button">Apagar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>