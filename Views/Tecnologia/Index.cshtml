@model IEnumerable<ControleStarter.Models.Tecnologia>

@{
    Layout = "_LayoutMenuLateral";
}

<div class="d-flex justify-content-center">
    <div class="card" style="width: auto;">
        <div class="card-body">
            <img src="/images/TECNOLOGIAS.png" alt="logo-TECNOLOGIAS" width="200" border="0">
            <hr>
            <a asp-action="NovaTecnologia" aps-controller="Tecnologia" class="btn btn-dark">Inserir nova Tecnologia</a><br><br>

            <script>
                $(document).ready( function () {
                    $('#tecnologias').DataTable({
                        "info": false,
                        "search": false,
                        "language": {
                            "lenghtMenu" : "Mostrando _MENU_ registros",
                            "zeroRecords": "Desculpe, nada foi encontrado",
                            "info": "Mostando página _PAGE_ de _PAGES_",
                            "infoEmpty": "Nenhum registro disponível",
                            "paginate": {
                                "first":    "Primeiro",
                                "last":     "Último",
                                "next":     "Próximo",
                                "previous": "Anterior"
                            }
                        }
                    });
            });
            </script>

            <table id="tecnologias" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Descrição</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var tecnologia in Model)
                    {
                        <tr>
                            <td>@tecnologia.Nome</td>
                            <td>@tecnologia.Descricao</td>
                            <td>
                                <a class="btn btn-primary btn-sm" href="Tecnologia/EditarTecnologia/@tecnologia.Id">Editar</a> 
                                <a class="btn btn-primary btn-sm" href="/Tecnologia/Apagar/@tecnologia.Id" role="button">Apagar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>