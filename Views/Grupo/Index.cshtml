@model IEnumerable<ControleStarter.Models.Grupo>

@{
    Layout = "_LayoutMenuLateral";
}

<div class="d-flex justify-content-center">
    <div class="card" style="width: auto;">
        <div class="card-body">
            <img src="/images/GRUPOS.png" alt="logo-GRUPOS" width="200" border="0">
            <hr>
            <a asp-action="NovoGrupo" aps-controller="Grupo" class="btn btn-dark">Inserir nova Grupo</a><br><br>

            <script>
                $(document).ready( function () {
                    $('#grupos').DataTable({
                        "info": false,
                        "search": false,
                        "language": {
                            "lenghtMenu" : "Mostrando _MENU_ registros",
                            "zeroRecords": "Desculpe, nada foi encontrado",
                            "info": "Mostando página _PAGE_ de _PAGES_",
                            "infoEmpty": "Nenhum registro disponível",
                            "paginate": {
                                "first":    "Primeiro",
                                "last":     "Último",
                                "next":     "Próximo",
                                "previous": "Anterior"
                            }
                        }
                    });
            } );
            </script>

            <table id="grupos" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Scrum Master</th>
                        <th>Tecnologia</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var grupo in Model)
                    {
                        <tr>
                            <td>@grupo.ScrumMaster</td>
                            <td>@grupo.Tecnologia.Nome</td>
                            <td>
                                <a class="btn btn-primary btn-sm" href="Grupo/EditarGrupo/@grupo.Id">Editar</a> 
                                <a class="btn btn-primary btn-sm" href="/Grupo/Apagar/@grupo.Id" role="button">Apagar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>